{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++",
        "command": "/usr/bin/g++",
        "args": ["-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}",
            "-l",
            "python3.6m"
            ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }